<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxz.test.Main2Activity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp">

            <ToggleButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton"
                android:layout_weight="1"
                android:textOff="LED1 ON"
                android:textOn="LED1 " />

            <ToggleButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton2"
                android:layout_weight="1"
                android:textOff="MOTOR1 ON"
                android:textOn="MOTOR1 " />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Class 2"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/h2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp">

            <ToggleButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton3"
                android:layout_weight="1"
                android:textOff="LED2 ON"
                android:textOn="LED2 " />

            <ToggleButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton4"
                android:layout_weight="1"
                android:textOff="MOTOR2 ON"
                android:textOn="MOTOR2 " />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class 1"
        android:id="@+id/textView"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/h2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FTT"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/h1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Time"
        android:id="@+id/button4"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="@dimen/h2" />


</RelativeLayout>
